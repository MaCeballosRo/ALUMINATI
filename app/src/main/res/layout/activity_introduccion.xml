<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/alu2"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona la imagen para obtener la informaciÃ³n"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/not"
            android:layout_gravity="center"
            android:id="@+id/idnot"
            android:layout_marginHorizontal="10dp"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/and"
            android:layout_gravity="center"
            android:id="@+id/idand"
            android:layout_marginHorizontal="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/or"
            android:layout_gravity="center"
            android:id="@+id/idor"
            android:layout_marginHorizontal="10dp"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/xor"
            android:layout_gravity="center"
            android:id="@+id/idxor"
            android:layout_marginHorizontal="10dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGRESAR"
        android:background="#00796D"
        android:id="@+id/atras"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="80dp"
        />

</LinearLayout>